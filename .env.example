# من الفكرة إلى السوق | Idea to Market - Environment Variables
# Copy this file to .env.local and fill in your actual API keys and configuration

# ===== AI INTEGRATION =====
# Claude AI API for content generation
VITE_CLAUDE_API_KEY=your_claude_api_key_here
VITE_CLAUDE_API_URL=https://api.anthropic.com/v1/messages
VITE_CLAUDE_MODEL=claude-sonnet-4-20250514

# ===== PAYMENT GATEWAYS =====
# Saudi Arabia Payment Methods

# Mada (Saudi debit cards)
VITE_MADA_API_KEY=your_mada_api_key
VITE_MADA_API_URL=https://api.mada.sa/v1
VITE_MADA_MERCHANT_ID=your_mada_merchant_id

# STC Pay (Saudi digital wallet)
VITE_STC_PAY_API_KEY=your_stc_pay_api_key
VITE_STC_PAY_API_URL=https://api.stcpay.com.sa/v1
VITE_STC_PAY_MERCHANT_ID=your_stc_pay_merchant_id

# Apple Pay
VITE_APPLE_PAY_MERCHANT_ID=merchant.sa.idea-to-market
VITE_APPLE_PAY_COUNTRY_CODE=SA
VITE_APPLE_PAY_CURRENCY_CODE=SAR

# Stripe (for international payments)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
VITE_STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# ===== ANALYTICS & TRACKING =====
# Google Analytics 4
VITE_GA_TRACKING_ID=G-XXXXXXXXXX
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Mixpanel (for detailed user analytics)
VITE_MIXPANEL_TOKEN=your_mixpanel_token

# Hotjar (for user behavior tracking)  
VITE_HOTJAR_ID=your_hotjar_id
VITE_HOTJAR_SV=your_hotjar_snippet_version

# ===== APPLICATION CONFIGURATION =====
# Base URLs
VITE_APP_URL=https://idea-to-market.sa
VITE_API_BASE_URL=https://api.idea-to-market.sa
VITE_CDN_URL=https://cdn.idea-to-market.sa

# App Metadata
VITE_APP_NAME=من الفكرة إلى السوق - Idea to Market
VITE_APP_NAME_EN=Idea to Market
VITE_APP_NAME_AR=من الفكرة إلى السوق
VITE_APP_DESCRIPTION=منصة مدعومة بالذكاء الاصطناعي لرواد الأعمال السعوديين
VITE_COMPANY_NAME=BrainSAIT
VITE_SUPPORT_EMAIL=support@idea-to-market.sa
VITE_SUPPORT_PHONE=+966501234567
VITE_SUPPORT_WHATSAPP=+966501234567

# ===== LOCALIZATION =====
# Default locale (ar-SA for Saudi Arabia)
VITE_DEFAULT_LOCALE=ar-SA
VITE_SUPPORTED_LOCALES=ar-SA,en-US
VITE_DEFAULT_TIMEZONE=Asia/Riyadh
VITE_DEFAULT_CURRENCY=SAR

# ===== SOCIAL MEDIA & SHARING =====
# WhatsApp Business API
VITE_WHATSAPP_BUSINESS_ID=your_whatsapp_business_id
VITE_WHATSAPP_API_TOKEN=your_whatsapp_api_token

# Social Media Links
VITE_TWITTER_URL=https://twitter.com/IdeaToMarketSA
VITE_LINKEDIN_URL=https://linkedin.com/company/idea-to-market-sa
VITE_INSTAGRAM_URL=https://instagram.com/IdeaToMarketSA
VITE_TELEGRAM_URL=https://t.me/IdeaToMarketSA

# ===== FEATURES FLAGS =====
# Enable/disable features for different environments
VITE_FEATURE_BRAINSTORMER=true
VITE_FEATURE_PRD_CREATOR=true
VITE_FEATURE_PROTOTYPE_GENERATOR=true
VITE_FEATURE_COLLABORATION=false
VITE_FEATURE_REALTIME_CHAT=false
VITE_FEATURE_API_INTEGRATION=true
VITE_FEATURE_WHATSAPP_SHARING=true
VITE_FEATURE_PDF_EXPORT=true
VITE_FEATURE_ANALYTICS=true

# Trial and Subscription Settings
VITE_TRIAL_DURATION_HOURS=1
VITE_FREE_TIER_PROJECTS=3
VITE_STARTER_TIER_PROJECTS=10
VITE_PRO_TIER_PROJECTS=50

# ===== SECURITY =====
# JWT Secret (for backend authentication)
JWT_SECRET=your_super_secure_jwt_secret_key
JWT_EXPIRES_IN=24h

# Rate Limiting
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW_MS=900000

# CORS Settings
VITE_CORS_ORIGINS=https://idea-to-market.sa,https://www.idea-to-market.sa

# ===== THIRD-PARTY SERVICES =====
# SendGrid (for emails)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@idea-to-market.sa

# Cloudinary (for image/file storage)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/idea_to_market
MONGODB_URI=mongodb://localhost:27017/idea_to_market

# ===== SAUDI-SPECIFIC SERVICES =====
# Absher API (Saudi digital identity)
VITE_ABSHER_CLIENT_ID=your_absher_client_id
VITE_ABSHER_CLIENT_SECRET=your_absher_client_secret

# Saudi Post API (for address validation)
VITE_SAUDI_POST_API_KEY=your_saudi_post_api_key

# SADAD (Saudi payment gateway)
VITE_SADAD_MERCHANT_ID=your_sadad_merchant_id
VITE_SADAD_API_KEY=your_sadad_api_key

# ===== DEVELOPMENT SETTINGS =====
# Only for development environment
NODE_ENV=development
VITE_DEBUG=true
VITE_MOCK_PAYMENTS=true
VITE_MOCK_AI_RESPONSES=false

# ===== PRODUCTION SETTINGS =====
# Uncomment and set for production
# NODE_ENV=production
# VITE_DEBUG=false
# VITE_MOCK_PAYMENTS=false
# VITE_MOCK_AI_RESPONSES=false

# ===== MONITORING & LOGGING =====
# Sentry (for error tracking)
VITE_SENTRY_DSN=your_sentry_dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# LogRocket (for session recording)
VITE_LOGROCKET_APP_ID=your_logrocket_app_id

# ===== PERFORMANCE & CDN =====
# CloudFlare settings
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# ===== A/B TESTING =====
# Optimizely or similar
VITE_OPTIMIZELY_SDK_KEY=your_optimizely_sdk_key

# ===== BACKUP & STORAGE =====
# AWS S3 for file storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=me-south-1
AWS_S3_BUCKET=idea-to-market-files

# ===== NOTIFICATIONS =====
# Push notifications
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:admin@idea-to-market.sa

# ===== API RATE LIMITS =====
# Claude AI
VITE_CLAUDE_RATE_LIMIT=10
VITE_CLAUDE_RATE_WINDOW=60000

# Custom API limits
VITE_API_RATE_LIMIT=50
VITE_API_RATE_WINDOW=60000